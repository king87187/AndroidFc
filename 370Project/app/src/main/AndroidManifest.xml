<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dalu.a370project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
    <application
        android:name=".WangApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" >
        <intent-filter>
            <action android:name="android.intent.action.HOME" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>
        <activity android:name=".SettingActivity" />
        <activity android:name=".SetupActivity1" />
        <activity android:name=".SetupActivity2" />
        <activity android:name=".SetupActivity3" />
        <activity android:name=".SetupActivity4" />
        <activity android:name=".LostAndFound" />
        <activity android:name=".AddressActivity"></activity>
        <activity android:name=".AtoolsActivity" />
        <activity
            android:name=".DragViewActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".NewcommunicationActivity" />
        <activity android:name=".communicationActivity" />
        <activity android:name=".MycommunicationActivity" />
        <activity android:name=".AppManageActivity" />
        <activity android:name=".ProcessManageActivity" />
        <activity android:name=".ProcessSetting"></activity>
        <receiver android:name=".receiver.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.SmsReceiver">
            <intent-filter android:priority="2147483647">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <service android:name=".service.AddressService" />
        <service android:name=".service.LocationService" />
        <service android:name=".service.BlackDefenceService"></service>
        <service
            android:name=".service.LockScreenService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>