<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wangdl="http://schemas.android.com/apk/res/com.example.dalu.a370project"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        style="@style/headerStyle"
        android:text="设置中心"
        />
    <com.example.dalu.a370project.customView.SettingItem
        android:id="@+id/msv_update"
        wangdl:titleName="自动更新"
        wangdl:desc_on="自动更新已开启"
            wangdl:desc_off="自动更新已关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.dalu.a370project.customView.SettingItem>
    <com.example.dalu.a370project.customView.SettingItem
        android:id="@+id/msv_address"
        wangdl:titleName="来电归属地显示"
        wangdl:desc_on="来电归属地显示已开启"
        wangdl:desc_off="来电归属地显示已关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.dalu.a370project.customView.SettingItem>

    <com.example.dalu.a370project.customView.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.dalu.a370project.customView.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.example.dalu.a370project.customView.SettingItem
        android:id="@+id/msv_black"
        wangdl:titleName="黑名单模式"
        wangdl:desc_on="已开启"
        wangdl:desc_off="已关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.dalu.a370project.customView.SettingItem>
</LinearLayout>